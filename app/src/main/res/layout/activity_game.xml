<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/score_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:paddingLeft="12dp"
            android:textColor="#df004c"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45sp" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:src="@drawable/btn_stop" />

    <LinearLayout
        android:id="@+id/circularprogress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dip">

        <com.example.circleseek.Views.CircularProgressBar
            android:id="@+id/circularprogressbar1"
            style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circularprogress_layout"
        android:layout_marginTop="70dip"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonshape_blue"
            android:shadowColor="#A8A8A8"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dip"
            android:background="@drawable/buttonshape_blue"
            android:textColor="#000000"
            android:textSize="12dp" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dip"
            android:background="@drawable/buttonshape_blue"
            android:textColor="#000000"
            android:textSize="12dp" />

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dip"
            android:background="@drawable/buttonshape_blue"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>