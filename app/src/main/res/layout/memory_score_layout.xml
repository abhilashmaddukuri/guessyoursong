 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:circular="http://schemas.android.com/apk/res/com.example.circleseek.example"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
  >
    
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textSize="40dp"
        android:fontFamily="sans-serif-medium" 
        android:text="Score"
        android:textColor="#000000" 
          android:layout_marginTop="30dp"
           android:layout_centerHorizontal="true"
        />
    
	
    <View
        android:id="@+id/line"
	android:layout_width="280dp"
 	android:layout_height="0.5dp"
 	android:background="#000000"
 	 android:layout_centerHorizontal="true"
    android:layout_below="@+id/heading"
    android:layout_marginTop="30dp" />
  

    
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/line_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/line"
   > 
    
      <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" 
        >   
        <TextView
    android:id="@+id/total_score_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13dp"
    android:textColor="#000000" 
    android:text="This Game"
 		android:fontFamily="sans-serif-condensed italic"
    />
        	<TextView
        android:id="@+id/time_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_score_text"
        android:layout_centerInParent="true"
 		android:textSize="25dp"
 		android:textColor="#33968C"
 		android:fontFamily="sans-serif-condensed italic" 
       />
    
        	
        	
        	
    		
    </RelativeLayout>
       
    
    <View
        android:id="@+id/line"
	android:layout_width="0.50dp"
 	android:layout_height="60dp"
 	android:background="#000000"
 	 
 	 android:layout_marginLeft="30dp"
    
     />
    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:layout_marginLeft="30dp"
        >   
        <TextView
    android:id="@+id/songs_inbank_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13dp"
    android:textColor="#000000" 
    android:text="Songs in store"
 		android:fontFamily="sans-serif-condensed italic"
    />
        
        	<TextView
        android:id="@+id/songs_inbank_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/songs_inbank_text"
        android:layout_centerInParent="true"
 		android:textSize="25dp"
 		android:textColor="#6254DF"
 		android:fontFamily="sans-serif-condensed italic" 
       />
    
    		
    </RelativeLayout>
   
    </LinearLayout>
  
   <View
     android:id="@+id/line_below_score"
	android:layout_width="280dp"
 	android:layout_height="0.50dp"
 	android:background="#000000"
 	 android:layout_centerHorizontal="true"
    android:layout_below="@+id/line_one"
    android:layout_marginTop="10dp" />
  
    
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 	android:id="@+id/line_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/line_below_score"
   > 
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" 
        >   
        <TextView
    android:id="@+id/best_total_score_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="13dp"
    android:text="Best Time"
    android:textColor="#000000" 
 	android:fontFamily="sans-serif-condensed italic"
    />
        	<TextView
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best_total_score_text"
        android:layout_centerInParent="true"
 		android:textSize="25dp"
 		android:textColor="#A00000"
 		android:fontFamily="sans-serif-condensed italic" 
       />
    
    		
    </RelativeLayout>
       
    
    
   </LinearLayout>
     
    <View
        android:id="@+id/line_below_bestscore"
	android:layout_width="280dp"
 	android:layout_height="0.50dp"
 	android:background="#000000"
 	 android:layout_centerHorizontal="true"
    android:layout_below="@+id/line_two"
    android:layout_marginTop="10dp" />

 
   


 
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp" 
    android:layout_below="@+id/line_below_bestscore"
   >
 
     <Button
        android:id="@+id/share"
        android:layout_width="150dp"
        android:layout_height="37dp"
         android:textSize="12dp"
         android:textColor="#0D0C0C"
    android:background="@drawable/button_scoreboard"
    android:layout_marginLeft="20dp"
    android:text="share"
        />
	<Button
        android:id="@+id/replay"
        android:layout_width="150dp"
        android:layout_height="37dp"
         android:textSize="12dp"
            android:textColor="#0D0C0C"
    android:background="@drawable/button_scoreboard"
    android:layout_marginLeft="20dp"
    android:text="Play Again"
        />     
 
 </LinearLayout>
 <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>