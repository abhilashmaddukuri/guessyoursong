<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res/com.example.circleseek.example"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Score"
        android:textColor="#000000"
        android:textSize="40dp" />


    <View
        android:id="@+id/line"
        android:layout_width="280dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#000000" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/total_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed italic"
                android:text="This Game"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_score_text"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed italic"
                android:textColor="#33968C"
                android:textSize="25dp" />


        </RelativeLayout>


        <View
            android:id="@+id/line"
            android:layout_width="0.50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"

            android:background="#000000"

            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/songs_inbank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed italic"
                android:text="Songs in store "
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/songs_inbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/songs_inbank_text"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed italic"
                android:textColor="#6254DF"
                android:textSize="25dp" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/line_below_score"
        android:layout_width="280dp"
        android:layout_height="0.50dp"
        android:layout_below="@+id/line_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000000" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_below_score"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/best_total_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed italic"
                android:text="        Best"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/best_total_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/best_total_score_text"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed italic"
                android:textColor="#A00000"
                android:textSize="25dp" />


        </RelativeLayout>


        <View
            android:id="@+id/line"
            android:layout_width="0.50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="70dp"
            android:background="#000000"

            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <TextView
                android:id="@+id/ncorrect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed italic"
                android:text="Correct answers"
                android:textColor="#000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/ncorrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ncorrect_text"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif-condensed italic"
                android:textColor="#E9AB17"
                android:textSize="25dp" />


        </RelativeLayout>


    </LinearLayout>

    <View
        android:id="@+id/line_below_bestscore"
        android:layout_width="280dp"
        android:layout_height="0.50dp"
        android:layout_below="@+id/line_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000000" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_below_bestscore"
        android:layout_marginRight="5dp"
        android:layout_marginTop="35dp"
        android:layout_toLeftOf="@+id/dividerView"
        android:layout_weight="1"
        android:background="@drawable/button_scoreboard"
        android:text="share"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <Button
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_below_bestscore"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/dividerView"
        android:layout_weight="1"
        android:background="@drawable/button_scoreboard"
        android:text="Play Again"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />


</RelativeLayout>