<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
     >
   

      <RelativeLayout
          android:id="@+id/relative_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="25dp"
        >   
      
         <TextView 
               android:id="@+id/textView1" 
               android:layout_width="wrap_content" 
               android:layout_height="wrap_content" 
               android:textSize="35dp"
               android:textColor="#000000"  
               />
          
      <TextView
        android:id="@+id/seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:layout_marginLeft="05dp"
 		android:textSize="18dp"
 		android:textColor="#000000"
 		android:text="Sec"
 		android:fontFamily="sans-serif-condensed italic" 
 		 android:layout_marginTop="25dip"
       />
	</RelativeLayout>



<TextView android:id="@+id/sampletext" 
               android:layout_width="wrap_content" 
               android:layout_height="wrap_content" 
     		   android:layout_centerHorizontal="true" 
         	   android:layout_marginTop="65dip"
               android:textSize="25dp"
                android:textColor="#000000"
               android:textStyle="bold|italic"
               android:layout_below="@+id/relative_one"
               android:text="GUESS THE ANSWERS NOW" />

<LinearLayout 
        android:id="@+id/linear_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_below="@+id/sampletext"
		 android:layout_marginTop="40dip"
		 android:orientation="vertical"
		android:layout_centerInParent="true"
    > 

 <Button
        android:id="@+id/ib1"
        android:layout_width="290dp"
        android:layout_height="40dp"
 	    android:textColor="#0D0C0C"
		android:textSize="12sp"
 	    android:background="@drawable/buttonshape_blue"
        />
 <Button
        android:id="@+id/ib2"
        android:layout_width="290dp"
        android:layout_height="40dp"
         android:textColor="#0D0C0C"
		android:textSize="12sp"
 	    android:background="@drawable/buttonshape_blue"
        android:layout_marginTop="15dip"

        />
 <Button
        android:id="@+id/ib3"
        android:layout_width="290dp"
        android:layout_height="40dp"
         android:textColor="#0D0C0C"
		android:textSize="12sp"
 	    android:background="@drawable/buttonshape_blue"
        android:layout_marginTop="15dip"

        />

    
</LinearLayout>      


</RelativeLayout>
